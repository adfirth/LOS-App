{
  "name": "los-app",
  "version": "1.0.0",
  "description": "LOS (Last One Standing) Football App - Modular Refactored Version",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "build": "webpack --mode production && node build.js",
    "build:fast": "webpack --mode development && node build.js",
    "dev": "webpack --mode development --watch",
    "start": "webpack serve --mode development",
    "test:local": "webpack --mode development && echo 'âœ… Fast local build complete - ready for testing'",
    "test:serve": "webpack serve --mode development --open",
    "test:fast": "node dev-tools/fast-test.js",
    "test:simple": "echo 'âœ… Opening simple local test - no build required' && start test-local-simple.html",
    "test:watch": "webpack --mode development --watch --info-verbosity verbose",
    "test:modules": "echo 'ðŸ§ª Testing individual modules...' && node dev-tools/module-test.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "check-branch": "node dev-tools/git-safety-check.js",
    "pre-commit": "npm run check-branch"
  },
  "keywords": [
    "football",
    "game",
    "los",
    "last-one-standing",
    "firebase"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "firebase": "^10.0.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12"
  }
}
